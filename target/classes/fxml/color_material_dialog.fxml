<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.furniture.visualizer.controller.ColorMaterialController"
      spacing="10" styleClass="material-dialog">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Material Type" styleClass="form-label"/>
    <ComboBox fx:id="materialComboBox" maxWidth="Infinity"/>
    
    <Label text="Color" styleClass="form-label"/>
    <ColorPicker fx:id="colorPicker" maxWidth="Infinity"/>
    
    <Label text="Material Properties" styleClass="form-label"/>
    <VBox spacing="5">
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Shininess:" minWidth="70"/>
            <Slider fx:id="shininessSlider" min="0" max="100" value="50" 
                    HBox.hgrow="ALWAYS"/>
            <Label fx:id="shininessValueLabel" text="50%" minWidth="40"/>
        </HBox>
        
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Texture:" minWidth="70"/>
            <ComboBox fx:id="textureComboBox" prefWidth="150"/>
        </HBox>
    </VBox>
    
    <Label text="Preview" styleClass="form-label"/>
    <VBox fx:id="previewContainer" styleClass="preview-container" 
          alignment="CENTER" VBox.vgrow="ALWAYS">
        <!-- Material preview will be added here -->
    </VBox>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" styleClass="cancel-button" onAction="#handleCancel"/>
        <Button text="Apply" styleClass="action-button" onAction="#handleApply"/>
    </HBox>
</VBox>