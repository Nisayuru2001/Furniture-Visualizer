<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.furniture.visualizer</groupId>
  <artifactId>furniture-visualizer</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.furniture.visualizer.App</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.furniture.visualizer.App</mainClass>
          <options>
            <option>--add-exports=javafx.graphics/com.sun.glass.ui=ALL-UNNAMED</option>
            <option>--add-exports=javafx.graphics/com.sun.glass.ui.mac=ALL-UNNAMED</option>
            <option>--add-opens=javafx.graphics/com.sun.glass.ui=ALL-UNNAMED</option>
            <option>--add-opens=javafx.graphics/com.sun.glass.ui.mac=ALL-UNNAMED</option>
            <option>-Dprism.order=sw</option>
            <option>-Dprism.text=t2k</option>
            <option>-Djavafx.macosx.embedded=true</option>
            <option>-Dapple.awt.UIElement=true</option>
            <option>-Dapple.awt.application.name=FurnitureVisualizer</option>
            <option>-Dapple.laf.useScreenMenuBar=true</option>
            <option>-Djavafx.glass.trackingRect=false</option>
            <option>-Djavafx.platform=mac</option>
          </options>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <name>${app.name}</name>
          <appVersion>${app.version}</appVersion>
          <vendor>Furniture Visualizer</vendor>
          <destination>target/dist</destination>
          <module>com.furniture.visualizer.App</module>
          <runtimeImage>target/jlink-image</runtimeImage>
          <javaOptions>
            <option>-Djavafx.platform=mac</option>
            <option>-Djavafx.glass.trackingRect=false</option>
          </javaOptions>
          <icon>src/main/resources/icons/AppIcon.icns</icon>
          <macPackageIdentifier>com.furniture.visualizer</macPackageIdentifier>
          <macPackageName>Furniture Visualizer</macPackageName>
          <type>DMG</type>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>19.0.2.1</javafx.version>
    <jpackage.version>17</jpackage.version>
    <app.name>FurnitureVisualizer</app.name>
    <app.version>1.0.0</app.version>
  </properties>
</project>
