<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Line?>

<BorderPane styleClass="main-container"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.furnituredesign.controllers.LoginController">
    
    <center>
        <HBox alignment="CENTER" styleClass="login-content">
            <!-- Left side with decorative image/brand -->
            <StackPane styleClass="brand-container">
                <VBox alignment="CENTER" spacing="15">
                    <!-- Add a decorative furniture icon/shape -->
                    <StackPane>
                        <Rectangle width="80" height="80" arcWidth="15" arcHeight="15" styleClass="accent-element" opacity="0.8"/>
                        <Text styleClass="accent-text" text="FD" style="-fx-font-size: 40px; -fx-font-weight: bold;" />
                    </StackPane>
                    
                    <Text styleClass="brand-name" text="Furniture">
                        <font>
                            <Font name="System Bold" size="52.0" />
                        </font>
                    </Text>
                    <Text styleClass="brand-tagline" text="Designer">
                        <font>
                            <Font name="System Italic" size="36.0" />
                        </font>
                    </Text>
                    
                    <!-- Decorative elements -->
                    <VBox spacing="4" alignment="CENTER" translateY="60">
                        <Line startX="0" endX="120" styleClass="accent-element" opacity="0.6"/>
                        <Line startX="20" endX="100" styleClass="accent-element" opacity="0.6"/>
                        <Line startX="40" endX="80" styleClass="accent-element" opacity="0.6"/>
                    </VBox>
                </VBox>
            </StackPane>
            
            <!-- Right side with login form -->
            <VBox alignment="CENTER" spacing="25" styleClass="login-form-container">
                <Text styleClass="login-title" text="Welcome">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Text>
                <Text styleClass="login-subtitle" text="Sign in to access your workspace">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Text>
                
                <VBox spacing="18" maxWidth="320">
                    <Label text="Username" styleClass="field-label">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <TextField fx:id="usernameField" promptText="Enter your username" styleClass="login-field"/>
                    <Label text="Password" styleClass="field-label">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="login-field"/>
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label fx:id="forgotPasswordLabel" text="Forgot Password?" styleClass="forgot-password" 
                               style="-fx-text-fill: #7D5A4F; -fx-underline: true; -fx-cursor: hand;">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                    </HBox>
                    <Button fx:id="loginButton" text="SIGN IN" onAction="#handleLogin" 
                            styleClass="login-button" maxWidth="Infinity">
                        <font>
                            <Font name="System Bold" size="15.0" />
                        </font>
                    </Button>
                </VBox>
                
                <Label fx:id="errorLabel" styleClass="error-label"/>
                
                <!-- Version info -->
                <Text styleClass="login-subtitle" text="Version 2.0" opacity="0.7">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Text>
            </VBox>
        </HBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <Text text="Â© 2025 Furniture Designer Pro. All rights reserved." styleClass="footer-text" />
        </HBox>
    </bottom>
</BorderPane>